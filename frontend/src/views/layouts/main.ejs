<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2d5a27',
                        'primary-dark': '#1e3d1a',
                        secondary: '#4a7c43',
                        'light-green': '#e8f5e9'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="fixed top-0 left-0 w-64 h-screen bg-gradient-to-b from-primary to-secondary text-white z-50">
            <!-- Brand -->
            <div class="p-6 border-b border-white/10">
                <h4 class="text-xl font-bold flex items-center gap-2">
                    <i class="bi bi-flower1"></i> Herbario UTPL
                </h4>
                <p class="text-green-200 text-sm mt-1">Panel Administrativo</p>
            </div>
            
            <!-- Navigation -->
            <nav class="mt-4">
                <ul class="space-y-1">
                    <li>
                        <a href="/dashboard" class="flex items-center gap-3 px-6 py-3 text-white/80 hover:bg-white/15 hover:text-white transition-all <%= page === 'dashboard' ? 'bg-white/15 text-white' : '' %>">
                            <i class="bi bi-grid-1x2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/plants" class="flex items-center gap-3 px-6 py-3 text-white/80 hover:bg-white/15 hover:text-white transition-all <%= page === 'plants' ? 'bg-white/15 text-white' : '' %>">
                            <i class="bi bi-tree"></i> Especímenes
                        </a>
                    </li>
                    <% if (user && user.role === 'ADMIN') { %>
                    <li>
                        <a href="/dashboard/users" class="flex items-center gap-3 px-6 py-3 text-white/80 hover:bg-white/15 hover:text-white transition-all <%= page === 'users' ? 'bg-white/15 text-white' : '' %>">
                            <i class="bi bi-people"></i> Usuarios
                        </a>
                    </li>
                    <% } %>
                    <li>
                        <a href="/dashboard/profile" class="flex items-center gap-3 px-6 py-3 text-white/80 hover:bg-white/15 hover:text-white transition-all <%= page === 'profile' ? 'bg-white/15 text-white' : '' %>">
                            <i class="bi bi-person-circle"></i> Mi Perfil
                        </a>
                    </li>
                </ul>
                
                <!-- Logout -->
                <div class="absolute bottom-0 left-0 right-0 border-t border-white/10">
                    <a href="/logout" class="flex items-center gap-3 px-6 py-4 text-white/80 hover:bg-white/15 hover:text-white transition-all">
                        <i class="bi bi-box-arrow-left"></i> Cerrar Sesión
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="ml-64 flex-1">
            <!-- Top Navbar -->
            <nav class="bg-white shadow-sm px-8 py-4 flex justify-between items-center sticky top-0 z-40">
                <h1 class="text-xl font-semibold text-gray-800"><%= title.split(' - ')[0] %></h1>
                <div class="flex items-center gap-4">
                    <% if (user) { %>
                    <span class="bg-green-600 text-white text-xs font-medium px-3 py-1 rounded-full"><%= user.role %></span>
                    <span class="text-gray-700"><%= user.name %></span>
                    <% } %>
                </div>
            </nav>

            <!-- Content -->
            <div class="p-8">
                <% if (success && success.length > 0) { %>
                <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-r flex items-center justify-between" role="alert">
                    <div class="flex items-center gap-2">
                        <i class="bi bi-check-circle"></i>
                        <span><%= success %></span>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-green-700 hover:text-green-900">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <% } %>
                
                <% if (error && error.length > 0) { %>
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-r flex items-center justify-between" role="alert">
                    <div class="flex items-center gap-2">
                        <i class="bi bi-exclamation-circle"></i>
                        <span><%= error %></span>
                    </div>
                    <button onclick="this.parentElement.remove()" class="text-red-700 hover:text-red-900">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <% } %>

                <%- body %>
            </div>
        </main>
    </div>
</body>
</html>
